{% extends 'base.html.twig' %}

{% block title %}Authentification index{% endblock %}

{% block body %}
    <h1>Authentification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Login</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for authentification in authentifications %}
            <tr>
                <td>{{ authentification.id }}</td>
                <td>{{ authentification.nom }}</td>
                <td>{{ authentification.prenom }}</td>
                <td>{{ authentification.Email }}</td>
                <td>{{ authentification.telephone }}</td>
                <td>{{ authentification.login }}</td>
                <td>{{ authentification.password }}</td>
                <td>
                    <a href="{{ path('authentification_show', {'id': authentification.id}) }}">show</a>
                    <a href="{{ path('authentification_edit', {'id': authentification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('authentification_new') }}">Create new</a>
{% endblock %}
